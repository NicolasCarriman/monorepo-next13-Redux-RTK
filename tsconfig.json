{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/task-core/*"],
      "@app/*": ["packages/task-app/*"]
    },
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
  },
  "exclude": ["node_modules", "packages/*/node_modules"],
  "include": ["packages/**/*"]
}